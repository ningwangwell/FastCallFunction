<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.shortcut">
    <uses-permission android:name="android.permission.WRITE_SYNC_SETTINGS"/>
    <uses-permission android:name="android.permission.INSTALL_SHORTCUT" />
    <uses-permission android:name="android.permission.UNINSTALL_SHORTCUT"/>
    <uses-permission android:name="android.permission.READ_SYNC_SETTINGS"/>
    <application
        android:icon="@mipmap/ic_launcher_teams_round"
        android:label="@string/app_name"
        android:allowBackup="false"
        android:roundIcon="@mipmap/ic_launcher_teams_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.shortcut.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.shortcut.ChatActivity"
            android:exported="true"
            android:parentActivityName="com.example.shortcut.MainActivity"/>
        <activity android:name="com.example.shortcut.ProfileActivity" android:exported="true"/>
        <activity android:name="com.example.shortcut.CallActivity"
            android:exported="true"
            android:parentActivityName="com.example.shortcut.ChatActivity"/>
        <activity android:name="com.example.shortcut.VideoActivity"
            android:exported="true"
            android:parentActivityName="com.example.shortcut.ChatActivity"/>
    </application>

</manifest>